<h1 class = "headline">Books</h1>

<table>
  <tr>
    <th>Titel</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</table>

<h2 class = "headline">New book</h2>
<%= form_with model: Book.new do |f| %>
  <div class = "field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
